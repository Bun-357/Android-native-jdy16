<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_l2"
        android:layout_width="82dp"
        android:layout_height="100dp"
        android:layout_marginStart="464dp"
        android:layout_marginTop="232dp"
        android:text="L"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_r2"
        android:layout_width="82dp"
        android:layout_height="100dp"
        android:layout_marginStart="572dp"
        android:layout_marginTop="232dp"
        android:text="R"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <io.github.controlwear.virtual.joystick.android.JoystickView
        android:id="@+id/joy_left"
        android:layout_width="201dp"
        android:layout_height="207dp"
        android:layout_marginTop="180dp"
        app:JV_backgroundColor="#3F51B5"
        app:JV_borderColor="#673AB7"
        app:JV_borderWidth="4dp"
        app:JV_buttonColor="#FFEB3B"
        app:JV_buttonSizeRatio="35%"
        app:JV_fixedCenter="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_status_joy_left"
        android:layout_width="328dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:text="data"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>